<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LemaExamen.Login">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="logo.png"/>

            <Entry x:Name="txtUsuario" Placeholder="Usuario" TextColor="Blue" />
            <Entry x:Name="txtPassword" Placeholder="Password" IsPassword="True" TextColor="Blue" />
            <Button Text="Iniciar Sesión" Clicked="Button_Clicked"/>
            <Label Text="" TextColor="Red" x:Name="lblresultado"/>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>